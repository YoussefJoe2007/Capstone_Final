@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager
@{
    Layout = null;  
    }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book your appointment with the doctor now</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            margin: 0;
            background: #fff;
            color: #222;
        }
        .container {
            width: 95%;
            margin: 0 auto;
            padding: 0;
        }
        .row {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 30px;
        }
        /* Left column */
        .left-col {
            width: 35%;
            min-width: 320px;
            padding: 0 10px;
        }
        .logo-row {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        .back-btn {
            width: 40px;
            height: 40px;
            background: #222;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: #fff;
            font-size: 22px;
            text-decoration: none;
        }
        .logo-img {
            height: 70px;
        }
        .section-title {
            font-size: 22px;
            font-weight: bold;
            margin: 20px 0 10px 0;
            text-align: left;
        }
        .doctor-name {
            color: #12a8e0;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 8px;
        }
        .clinic-address {
            font-size: 15px;
            margin-bottom: 20px;
        }
        .info-icons {
            display: flex;
            justify-content: space-between;
            margin-bottom: 18px;
            margin-top: 10px;
        }
        .info-icon-block {
            text-align: center;
            width: 32%;
        }
        .info-icon-block i {
            color: #12a8e0;
            font-size: 28px;
            margin-bottom: 3px;
        }
        .info-label {
            color: #888;
            font-size: 14px;
            margin: 2px 0 0 0;
        }
        .info-value {
            font-size: 15px;
            margin-top: 2px;
        }
        .on-appointment {
            color: #888;
            font-size: 14px;
            margin-bottom: 7px;
        }
        .book-btn {
            background: #22b455;
            color: #fff;
            border: none;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            padding: 13px 0;
            width: 100%;
            margin-bottom: 8px;
            cursor: pointer;
            transition: background 0.2s;
        }
        .book-btn:hover {
            background: #179a43;
        }
        .show-dates {
            color: #666;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 30px;
        }
        .show-dates span {
            font-size: 13px;
        }
        .book-now-btn {
            background: #2e7fd7;
            color: #fff;
            border: none;
            font-size: 18px;
            border-radius: 6px;
            padding: 15px 0;
            width: 100%;
            margin-top: 18px;
            cursor: pointer;
            transition: background 0.2s;
        }
        .book-now-btn:hover {
            background: #115ea9;
        }
        .footer {
            text-align: center;
            color: #888;
            font-size: 14px;
            margin-top: 40px;
            margin-bottom: 10px;
        }
        /* Right column */
        .right-col {
            width: 62%;
            min-width: 320px;
            padding: 0 10px;
        }
        .main-title {
            text-align: center;
            font-size: 25px;
            font-weight: bold;
            margin-top: 30px;
            margin-bottom: 18px;
            letter-spacing: 0.5px;
        }
        .steps-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
        }
        .step {
            text-align: center;
            margin: 0 18px;
        }
        .step-circle {
            width: 18px;
            height: 18px;
            background: #22b455;
            border-radius: 50%;
            display: inline-block;
            margin-bottom: 3px;
        }
        .step-label {
            font-size: 14px;
            color: #222;
        }
        .step-line {
            width: 38px;
            height: 2px;
            background: #22b455;
            display: inline-block;
            vertical-align: middle;
            margin: 0 3px;
        }
        .doctor-profile {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            margin-top: 10px;
        }
        .doctor-avatar {
            width: 65px;
            height: 65px;
            border-radius: 50%;
            border: 2px solid #12a8e0;
            object-fit: cover;
            margin-right: 15px;
        }
        .doctor-profile-info {
            flex: 1;
        }
        .doctor-profile-info .doctor-name {
            font-size: 18px;
            color: #12a8e0;
            margin: 0 0 2px 0;
        }
        .doctor-title {
            font-size: 15px;
            color: #444;
            margin-bottom: 3px;
        }
        .doctor-rating {
            color: #f8c51c;
            font-size: 17px;
            margin-right: 10px;
        }
        .doctor-views {
            color: #888;
            font-size: 15px;
        }
        .section-subtitle {
            font-size: 19px;
            font-weight: bold;
            color: #222;
            margin: 18px 0 8px 0;
        }
        .about-row {
            margin-bottom: 12px;
        }
        .about-icon, .edu-icon, .photo-icon {
            color: #12a8e0;
            margin-right: 5px;
        }
        .about-label, .edu-label, .photo-label {
            font-weight: bold;
            font-size: 15px;
            margin-right: 5px;
        }
        .about-text, .edu-text {
            font-size: 15px;
            color: #333;
            margin-left: 22px;
        }
        .clinic-photos-row {
            margin-top: 7px;
            display: flex;
            flex-wrap: wrap;
        }
        .clinic-photo {
            width: 70px;
            height: 55px;
            border-radius: 5px;
            object-fit: cover;
            margin-right: 7px;
            margin-bottom: 7px;
            border: 1px solid #eee;
        }
       media {
            .row {
                flex-direction: column;
            }
            .left-col, .right-col {
                width: 100%;
                min-width: unset;
            }
            .right-col {
                margin-top: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <!-- Left Column -->
            <div class="left-col">
                <div class="logo-row">
                    <a href="/Home/Index" class="back-btn">&#8592;</a>

                    <img src="~/images/Logo.png" alt="Tashkheesy" class="logo-img">
                </div>
                <div class="section-title">Booking information</div>
                <div class="doctor-name">Dr.Omar Eldidi</div>
                <div class="clinic-address">
                    <b>Nasr City</b> 10 And Elaziz Eissa ( Almanhal school).
                </div>
                <div class="info-icons">
                    <div class="info-icon-block">
                        <i>⏳</i>
                        <div class="info-label">Waiting</div>
                        <div class="info-value">10 minutes</div>
                    </div>
                    <div class="info-icon-block">
                        <i>💵</i>
                        <div class="info-label">Fees</div>
                        <div class="info-value">500 EGP</div>
                    </div>
                    <div class="info-icon-block">
                        <i>📞</i>
                        <div class="info-label">Call Us</div>
                        <div class="info-value">01201111344</div>
                    </div>
                </div>
                <div class="on-appointment">On Appointment</div>
                <button class="book-btn">Book Tomorrow at 02:00 PM</button>





                <a href="/Dates/Index" class="show-dates">Show other available dates <span>&#9660;</span></a>




                <br /><br />




                <button class="book-now-btn" onclick="location.href='/Payment/Index'">Book Now</button>




                <div class="footer">
                    &copy; Copyright 2025 Tashkheesy corporation
                </div>
            </div>
            <!-- Right Column -->
            <div class="right-col">
                <div class="main-title">
                    Book your appointment with the doctor now
                </div>
                <div class="steps-bar">
                    <div class="step completed">
                        <span class="step-circle">✔</span>
                        <div class="step-label">Booking</div>
                    </div>
                    <span class="step-line"></span>
                    <div class="step active">
                        <span class="step-circle">2</span>
                        <div class="step-label">Payment</div>
                    </div>
                    <span class="step-line"></span>
                    <div class="step">
                        <span class="step-circle">3</span>
                        <div class="step-label">Confirm</div>
                    </div>
                </div>
                <div class="doctor-profile">
                    <img src="~/images/doctor.jpg" alt="Dr. Omar Eldidi" class="doctor-avatar">
                    <div class="doctor-profile-info">
                        <div class="doctor-name">Dr. Omar Eldidi</div>
                        <div class="doctor-title">Consultant of Dentistry (Teeth)</div>
                        <span class="doctor-rating">5 ★</span>
                        <span class="doctor-views">62113 <span style="font-size:17px;">👁️</span></span>
                    </div>
                </div>
                <div class="section-subtitle">Clinics</div>
                <hr style="margin: 10px 0 15px 0;">
                <div class="about-row">
                    <span class="about-icon">ℹ️</span>
                    <span class="about-label">About doctor</span>
                    <div class="about-text">Masters Of Fixed Prosthodontics Ain' Shams University</div>
                </div>
                <div class="about-row">
                    <span class="edu-icon">🎓</span>
                    <span class="edu-label">Education</span>
                    <div class="edu-text">ماجستير التركيبات الثابتة والتجميلية بجامعة عين شمس</div>
                </div>
                <div class="about-row">
                    <span class="photo-icon">📸</span>
                    <span class="photo-label">Clinic photos</span>
                    <div class="clinic-photos-row">
                        <img src="~/images/clinic (1).png" class="clinic-photo" alt="">
                        <img src="~/images/clinic (2).png" class="clinic-photo" alt="">
                        <img src="~/images/clinic (3).png" class="clinic-photo" alt="">
                        <img src="~/images/clinic (4).png" class="clinic-photo" alt="">
                        <img src="~/images/clinic (5).png" class="clinic-photo" alt="">
                        <img src="~/images/clinic (6).png" class="clinic-photo" alt="">
                        <img src="~/images/clinic (7).png" class="clinic-photo" alt="">
                        <img src="~/images/clinic (8).png" class="clinic-photo" alt="">

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
