@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Tashkheesy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="~/images/logo3.png" type="image/png" sizes="256x256">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/images/logo3.png" alt="Tashkheesy Logo" style="height: 70px;" />
        </div>        <nav>
            <a href="#">Clinics</a>
            <a href="#reservations">Doctors</a>
            <a href="#WhyTashkheesy">Info</a>
            <a href="#Chat">ChatBot</a>
            <a href="/Doctor/Register" style="color: #007bff; font-weight: bold;">Are you a Doctor ?</a>
        </nav>

        <input type="text" placeholder="Search for..." class="search-bar" />


            <ul class="navbar-nav ms-auto d-flex align-items-center">
                @if (signInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <span class="nav-link text-dark">Welcome, @User.Identity.Name</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i> SignUp
                        </a>
                    </li>
                }
            </ul>

    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer">
        <img src="~/images/Logo3.png" alt="Tashkheesy Logo" class="footer-logo" />
        <div class="social-icons">
            <i class="fab fa-linkedin icon"></i>
            <i class="fab fa-instagram icon"></i>
            <i class="fab fa-facebook icon"></i>
            <i class="fab fa-twitter icon"></i>
        </div>
        <p>&copy; Tashkheesy 202X. All rights reserved.</p>
    </footer>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>