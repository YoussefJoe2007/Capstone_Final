@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book your appointment with the doctor now</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            margin: 0;
            background: #f5f6fa;
            color: #222;
        }

        .main-wrapper {
            display: flex;
            min-height: 100vh;
            align-items: flex-start;
            justify-content: center;
        }

        .left-panel {
            width: 340px;
            background: #fff;
            border-radius: 13px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            margin: 40px 30px 40px 0;
            padding: 30px 28px 18px 28px;
            display: flex;
            flex-direction: column;
            min-height: 530px;
        }

        .logo-row {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
        }

        .back-btn {
            width: 38px;
            height: 38px;
            background: #222;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 13px;
            color: #fff;
            font-size: 22px;
            text-decoration: none;
        }

        .logo-img {
            height: 55px;
        }

        .section-title {
            font-size: 19px;
            font-weight: bold;
            margin-bottom: 14px;
            color: #222;
        }

        .doctor-name {
            color: #12a8e0;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 6px;
        }

        .clinic-address {
            font-size: 15px;
            margin-bottom: 16px;
            color: #333;
        }

        .info-icons {
            display: flex;
            justify-content: space-between;
            margin-bottom: 16px;
            margin-top: 0;
        }

        .info-icon-block {
            text-align: center;
            width: 32%;
        }

            .info-icon-block i {
                color: #12a8e0;
                font-size: 23px;
                margin-bottom: 2px;
            }

        .info-label {
            color: #888;
            font-size: 13px;
            margin: 2px 0 0 0;
        }

        .info-value {
            font-size: 14px;
            margin-top: 1px;
            color: #222;
        }

        .on-appointment {
            color: #888;
            font-size: 13px;
            margin-bottom: 10px;
        }

        .book-btn {
            background: #22b455;
            color: #fff;
            border: none;
            font-size: 15px;
            font-weight: bold;
            border-radius: 5px;
            padding: 11px 0;
            width: 100%;
            margin-bottom: 8px;
            cursor: pointer;
            transition: background 0.2s;
        }

            .book-btn:hover {
                background: #179a43;
            }

        .show-dates {
            color: #666;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 22px;
            margin-top: 2px;
        }

            .show-dates span {
                font-size: 13px;
            }

        .book-now-btn {
            background: #e7ebf3;
            color: #222;
            border: none;
            font-size: 16px;
            border-radius: 6px;
            padding: 15px 0;
            width: 100%;
            margin-top: 18px;
            cursor: pointer;
            font-weight: 600;
            transition: background 0.2s;
        }

            .book-now-btn:hover {
                background: #d2d9e6;
            }

        .footer {
            text-align: center;
            color: #888;
            font-size: 13px;
            margin-top: auto;
            margin-bottom: 4px;
        }

        /* Calendar Panel */
        .calendar-panel {
            background: #fff;
            border-radius: 13px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            margin: 40px 0 40px 0;
            padding: 35px 35px 20px 35px;
            min-width: 330px;
            max-width: 410px;
        }

        .calendar-header {
            font-size: 22px;
            font-weight: 600;
            color: #222;
            margin-bottom: 18px;
            text-align: center;
        }

        .month-selector {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .month-arrow {
            background-color: #f0f4f8;
            color: #4a5568;
            border: none;
            border-radius: 50%;
            width: 28px;
            height: 28px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            font-size: 18px;
        }

        .month-name {
            font-size: 17px;
            font-weight: 500;
            color: #1a202c;
        }

        .calendar {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 18px;
        }

            .calendar th, .calendar td {
                text-align: center;
                padding: 7px;
                font-size: 14px;
                color: #4a5568;
            }

            .calendar th {
                font-weight: 500;
                color: #888;
            }

            .calendar td {
                cursor: pointer;
                transition: background-color 0.2s;
                border-radius: 50%;
            }

                .calendar td:hover {
                    background-color: #e7ebf3;
                }

            .calendar .selected {
                background-color: #22b455;
                color: #fff;
                border-radius: 50%;
            }

        .time-slots {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 12px;
        }

        .time-slot-button {
            background-color: #22b455;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 10px 15px;
            font-size: 15px;
            cursor: pointer;
            margin: 0 2px;
            font-weight: 500;
            transition: background-color 0.2s;
        }

            .time-slot-button:hover {
                background-color: #179a43;
            }

        .time-slot-nav {
            background-color: #f0f4f8;
            color: #4a5568;
            border: none;
            border-radius: 50%;
            width: 28px;
            height: 28px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            font-size: 18px;
        }
      

        {
            flex-direction: column;
            align-items: center;
        }

        .left-panel, .calendar-panel {
            margin: 24px 0;
            width: 95vw;
            max-width: 500px;
        }

        }
    </style>
</head>
<body>
