                    <option value="Neurology">Neurology</option>
                    <option value="Obstetrics and Gynecology">Obstetrics and Gynecology</option>
                    <option value="Pediatrics">Pediatrics</option>
                    <option value="Psychiatry">Psychiatry</option>
                    <option value="Radiology">Radiology</option>
                    <option value="Surgery">Surgery</option>
                    <option value="Urology">Urology</option>
                    <option value="Endocrinology">Endocrinology</option>
                    <option value="Gastroenterology">Gastroenterology</option>
                    <option value="Ophthalmology">Ophthalmology</option>
                    <option value="Orthopedic Surgery">Orthopedic Surgery</option>
                    <option value="Pulmonology">Pulmonology</option>
                    <option value="Rheumatology">Rheumatology</option>
                    <option value="Nephrology">Nephrology</option>
                    <option value="Hematology">Hematology</option>
                    <option value="Plastic Surgery">Plastic Surgery</option>
                    <option value="Palliative Medicine">Palliative Medicine</option>
                    <option value="Geriatrics">Geriatrics</option>
                    <option value="Sports Medicine">Sports Medicine</option>
                    <!-- Add more specialties as needed -->
                </select>

               <select name="City" required>
  <option value="">Select City</option>
  <option value="Cairo">Cairo</option>
  <option value="Alexandria">Alexandria</option>
  <option value="Giza">Giza</option>
  <option value="Port Said">Port Said</option>
  <option value="Suez">Suez</option>
  <option value="Luxor">Luxor</option>
  <option value="Aswan">Aswan</option>
  <option value="Tanta">Tanta</option>
  <option value="Mansoura">Mansoura</option>
  <option value="Zagazig">Zagazig</option>
  <option value="Ismailia">Ismailia</option>
  <option value="Fayoum">Fayoum</option>
  <option value="Damanhur">Damanhur</option>
  <option value="Beni Suef">Beni Suef</option>
  <option value="Minya">Minya</option>
  <option value="Sohag">Sohag</option>
  <option value="Qena">Qena</option>
  <option value="Assiut">Assiut</option>
  <option value="Hurghada">Hurghada</option>
  <option value="Sharm El Sheikh">Sharm El Sheikh</option>
  <option value="Taba">Taba</option>
  <option value="Shibin El Kom">Shibin El Kom</option>
  <option value="Mersa Matruh">Mersa Matruh</option>
  <option value="Ras Ghareb">Ras Ghareb</option>
  <option value="El Mahalla El Kubra">El Mahalla El Kubra</option>
  <option value="6th of October City">6th of October City</option>
  <option value="New Cairo">New Cairo</option>
  <!-- Add more cities as needed -->
</select>

            </div>

            <button type="submit" class="send-btn" onclick="showSuccess()">Send</button>
        </form>

        <div id="successBox" style="display: none; text-align: center;">
            <img src="https://img.icons8.com/color/96/ok--v1.png" width="120" />
            <h2>Success!</h2>
            <p>Great. Thank You Doctor</p>
            <a href="/Home/Index" style="
    background-color: #4CAF50;
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    cursor: pointer;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: 0.3s ease;
    text-decoration: none;
    display: inline-block;
">
                Go to Home
            </a>

        </div>

        <div class="footer">
            <span class="footer-icon">©</span>
            <span>Copyright 2025 Tashkheesy corporation</span>
        </div>
    </div>


    <script>
        const dropdown = document.getElementById("countryDropdown");
        const options = document.getElementById("dropdownOptions");
        const selectedFlag = document.getElementById("selectedFlag");
        const selectedCode = document.getElementById("selectedCode");
        const hiddenInput = document.getElementById("countryCodeInput");

        dropdown.addEventListener("click", function (e) {
            options.style.display = options.style.display === "block" ? "none" : "block";
        });

        options.addEventListener("click", function (e) {
            if (e.target.tagName === "LI" || e.target.closest("li")) {
                const li = e.target.closest("li");
        const code = li.getAttribute("data-code");
        const flag = li.getAttribute("data-flag");

        selectedFlag.src = `https://flagcdn.com/${flag}.svg`;
        selectedCode.textContent = code;
        hiddenInput.value = code;
        options.style.display = "none";
            }
        });

        document.querySelector("form").addEventListener("submit", function (e) {
            e.preventDefault(); // يمنع الإرسال التلقائي
            if (this.checkValidity()) {
                // لو البيانات كلها مظبوطة
                document.querySelector("form").style.display = "none";
                document.getElementById("successBox").style.display = "block";
            } else {
                // لو في بيانات ناقصة، يشغل التحقق من المتصفح
                this.reportValidity();
            }
        });


    </script>

</body>
</html>
